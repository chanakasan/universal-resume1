{% extends '::admin-ui.html.twig' %}

{% block body -%}
    <h1>Driver list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Display_name</th>
                <th>Address</th>
                <th>Birth_date</th>
                <th>License_date</th>
                <th>License_ref</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('driver_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.displayname }}</td>
                <td>{{ entity.address }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.licensedate %}{{ entity.licensedate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.licenseref }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('driver_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('driver_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
        <ul>
        <li>
            <a href="{{ path('driver_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
