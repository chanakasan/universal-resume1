{% extends 'Panda86AppBundle::create-view.html.twig' %}

{% set closeBtn_url = path('request_list') %}
{% block form %}
    <form class="appnitro form-horizontal" action="{{ path('disapprove_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        {{ form_widget(form._token) }}

        <div class="form_description">
            <h2>Disapprove request</h2><br/>
        </div>
        <div id="req_info" style="border: solid 0.5px">
            Request details goes here ...
        </div>
        <br/>
        <div class="control-group">
            <label class="control-label">Req ID
                <span class="form-required" title="This field is required.">*</span>
            </label>

            <div class="controls">
                {{ form_row(form.request) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Remarks</label>

            <div class="controls">
                {{ form_row(form.remarks) }}
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button id="disapprove_btn" class="btn btn-danger" type="submit" formnovalidate="">Disapprove</button>
            </div>
        </div>
    </form>
{% endblock %}
