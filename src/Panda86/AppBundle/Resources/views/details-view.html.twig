{% extends '::admin-app.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        [class*="span"].centred {
            margin-left: auto;
            margin-right: auto;
            float: none;
        }
    </style>
    <link rel="stylesheet" href="/assets/pform/show.css">
{% endblock %}
{% block body -%}
    <div class="row">
        <div class="span9 centred">

            <img id="top" src="/assets/pform/top.png" alt="">

            <div id="form_container">
                <div id="close" class="pull-right">
                    <a class="btn btn-danger" href="{{ closeBtn_url }}">X</a>
                </div>
                <h1>Header</h1>
                <form class="appnitro form-horizontal">
                    {% block table %}{% endblock %}
                </form>
            </div>
            <img id="bottom" src="/assets/pform/bottom.png" alt="">
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
