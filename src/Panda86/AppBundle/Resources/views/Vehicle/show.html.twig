{% extends '::admin-ui.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        [class*="span"].centred {
            margin-left: auto;
            margin-right: auto;
            float: none;
        }
    </style>
    <link rel="stylesheet" href="/public/css/smoothness/jquery-ui-1.10.3.custom.min.css">
    <link rel="stylesheet" href="/chosen/chosen.css">
    <link rel="stylesheet" href="/public/css/request/new.css">
{% endblock %}
{% block body -%}
    <div class="row">
        <div class="span9 centred">

            <img id="top" src="/public/css/request/top.png" alt="">

            <div id="form_container">
                <h1>Header</h1>

                <form class="appnitro form-horizontal">

                    <table class="record_properties">
                        <div class="form_description">
                            <h2> Vehicle details - {{ entity.make }} {{ entity.model }} {{ entity.regno }}</h2>
                        </div>
                        <div id="v-photo">
                            <img src="/uploads/images/vehicles/{{ entity.image }}" width="400" height="300"/>
                        </div>
                        <table class="record_properties">
                            <tbody>
                            <tr>
                                <th>Make</th>
                                <td>{{ entity.make }}</td>
                            </tr>
                            <tr>
                                <th>Model</th>
                                <td>{{ entity.model }}</td>
                            </tr>
                            <tr>
                                <th>Reg No.</th>
                                <td>{{ entity.regno }}</td>
                            </tr>
                            <tr>
                                <th>Passengers</th>
                                <td>{{ entity.passengers }}</td>
                            </tr>
                            <tr>
                                <th>Air-Conditioned</th>
                                <td>{% if entity.ac %}Yes{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Owned by company</th>
                                <td>{% if entity.iscompanyowned %}Yes{% endif %}</td>
                            </tr>
                            <tr>
                                <th>Photo file</th>
                                <td>{{ entity.image }}</td>
                            </tr>
                            <tr>
                                <th>Other details</th>
                                <td>{{ entity.remarks }}</td>
                            </tr>
                            <tr>
                                <th>Date added</th>
                                <td>{{ entity.wasadded|date('Y-m-d H:i:s') }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <ul class="record_actions">
                            <li>
                                <a href="{{ path('vehicle_edit', { 'id': entity.id }) }}">
                                    Edit
                                </a>
                            </li>
                            <li>
                                <form action="{{ path('vehicle_delete', { 'id': entity.id }) }}" method="post">
                                    <input type="hidden" name="_method" value="DELETE"/>
                                    {{ form_widget(delete_form) }}
                                    <button type="submit">Delete</button>
                                </form>
                            </li>
                            <li>
                                <a href="{{ path('vehicle') }}">
                                    Back to the list
                                </a>
                            </li>
                        </ul>
                </div>
            <img id="bottom" src="/public/css/request/bottom.png" alt="">
        </div>
    </div>


{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="/public/js/jquery-1.9.1.min.js"></script>
{% endblock %}