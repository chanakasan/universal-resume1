{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Vehicle list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Make</th>
                <th>Model</th>
                <th>Reg_no</th>
                <th>Passengers</th>
                <th>Ac</th>
                <th>Remarks</th>
                <th>Company_owned</th>
                <th>Added</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('vehicle_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.make }}</td>
                <td>{{ entity.model }}</td>
                <td>{{ entity.regno }}</td>
                <td>{{ entity.passengers }}</td>
                <td>{{ entity.ac }}</td>
                <td>{{ entity.remarks }}</td>
                <td>{{ entity.companyowned }}</td>
                <td>{% if entity.added %}{{ entity.added|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vehicle_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('vehicle_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vehicle_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
