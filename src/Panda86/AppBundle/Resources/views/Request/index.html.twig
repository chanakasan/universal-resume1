{% extends '::admin.html.twig' %}

{% block body -%}
    <h2>Requests list</h2><br/>

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="requests_list">
        <thead>
            <tr>
                <th>Journey Type</th>
                <th>Pickup Time</th>
                <th>Pickup Location</th>
                <th>Destination</th>
                <th>Return Time</th>
                <th>Vehicle Type</th>
                <th>Purpose</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.journeytype }}</td>
                <td>{% if entity.pickuptime %}{{ entity.pickuptime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.pickuploc }}</td>
                <td>{{ entity.destination }}</td>
                <td>{% if entity.returntime %}{{ entity.pickuptime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.vtype.getname }}</td>
                <td>{{ entity.purpose }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('request_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('request_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('request_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
