{% extends '::app.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/assets/pform/start.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="span12">
            <img id="top" src="/assets/pform/top.png" alt="">
            <div id="form_container">
                <h1>Header</h1>
                <form class="appnitro"  method="post" action="{{ path('request_new') }}">
                    <fieldset>
                        <legend>Request a vehicle reservation</legend>
                        <!--details -->
                        <p>1. Please select and fill out a form from below.</p>
                        <p>2. Company must approve the request.</p>
                        <p>3. Confirmation of the reservation will be notified to you by email.</p>
                        <!--/end details -->
                        <br/>
                        <label>No. of days <span style="color: red">*</span></label>
                        <input class="input-small" id="no_days" name="no_days" type="text" placeholder="e.g. 1, 2, 3â€¦">
                        <span class="help-block">No. of days you wish to use the vehicle.</span>
                        <br/>
                        <button type="submit" class="btn">Show request form</button>
                    </fieldset>
                </form>
                <div id="footer">
                    <a href="http://www.icta.lk">ICTA | &copy 2013</a>
                </div>
            </div>
            <img id="bottom" src="/assets/pform/bottom.png" alt="">
        </div>
    </div>
{% endblock %}