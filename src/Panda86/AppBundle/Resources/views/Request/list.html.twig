{% extends '::admin.html.twig' %}

{% block body -%}
    <h2>Requests index</h2><br/>

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="requests_list">
        <thead>
        <tr>
            <th>Req ID</th>
            <th>Requester</th>
            <th>Requested vehicle</th>
            <th>Requested Date/Time</th>
            <th>Purpose of travel</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity['request'].id }}</td>
                <td>{{ entity['owner'].name }}</td>
                <td>{{ entity['request'].vtype.name }}</td>
                <td>{% if entity['request'].pickuptime %}{{ entity['request'].pickuptime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity['request'].purpose }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('request_show', { 'id': entity['request'].id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('request_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}