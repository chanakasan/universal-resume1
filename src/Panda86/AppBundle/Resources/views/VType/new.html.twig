{% extends 'Panda86AppBundle::create-view.html.twig' %}

{% block title %}
    {{ parent() }} - Create vehicle type
{% endblock %}
{% set closeBtn_url = path('vtype') %}
{% block form %}
    <form action="{{ path('vtype_create') }}" class="appnitro form-horizontal"
      method="post" {{ form_enctype(form) }}>
    <div class="form_description">
        <h2>Add new vehicle category</h2><br/>
    </div>
        <!-- form validation -->
        {{ form_errors(form) }}
        {{ form_widget(form._token) }}

        <div class="control-group">
            <label class="control-label">Type
                <span class='f-required'>*</span>
            </label>

            <div class="controls">
                {% set attr = {'class': 'name-part','placeholder': 'e.g. Car, Jeep, Mini Van', 'required': 'required'} %}
                {% set attr = attr|merge({'ng-model':'vtype', 'ng-change' : 'addNames()'}) %}
                {{ form_row(form.type, {'attr': attr }) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Max. passengers
                <span class='f-required'>*</span>
            </label>

            <div class="controls">
                {% set attr = {'class': 'input-small name-part', 'required': 'required'} %}
                {% set attr = attr|merge({'ng-model':'passengers', 'ng-change' : 'addNames()'}) %}
                {{ form_row(form.passengers, {'attr': attr }) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Desciption</label>

            <div class="controls">
                {% set attr = {} %}
                {{ form_row(form.descrip, {'attr': attr }) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Display name</label>

            <div class="controls">
                <input id="display_name" type="text" ng-model="display_name" disabled="true" placeholder="...auto-completed"/>
                {{ form_row(form.name, {'attr': {'ng-model': 'vtype_name'} }) }}
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input class="btn btn-success" type="submit" value="Create"/>
            </div>
        </div>
    </form>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="/app/js/vtype/new.js"></script>
    <script src="/app/js/vtype/formController.js"></script>
{% endblock %}