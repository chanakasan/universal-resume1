{% extends '::admin-app.html.twig' %}

{% block body -%}
    <h3>Vehicle Categories list</h3>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Descrip</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.descrip }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('vtype_edit', { 'id': entity.id }) }}">Edit/Delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('vtype_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
