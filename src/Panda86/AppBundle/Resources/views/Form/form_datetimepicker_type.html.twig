{% block dateTimePicker_widget %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' Panda86DateTimePicker')|trim}) %}
    <div {{ block('widget_container_attributes') }}>
        {{ form_errors(form.date) }}
        {{ form_errors(form.time) }}

        <label class="control-label">Pickup date/time
            <span class="form-required" title="This field is required.">*</span>
        </label>
        <div class="controls">
            <div class="input-append" >
                {{ form_widget(form.date, {'id' : id ~ '_datepicker', 'attr': {'class': 'input-medium', 'placeholder' : 'yyyy-mm-dd'} }) }}
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        </div>
        <label class="control-label">
            <span class="form-required" title="This field is required.">*</span>
        </label>
        <div class="controls">
            <div class="input-append" >
                {{ form_widget(form.time, {'id' : id ~ '_timepicker', 'attr': {'class': 'input-medium', 'placeholder' : '24 Hours e.g. HH:MM'} }) }}
                <span class="add-on"><i class="icon-time"></i></span>
            </div>
        </div>
    </div>
{% endblock %}