{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Request list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Journey_type</th>
                <th>Start_time</th>
                <th>Start_loc</th>
                <th>Pickup_time</th>
                <th>Pickup_loc</th>
                <th>Vehicle_type</th>
                <th>Purpose</th>
                <th>Accompaniedby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('request_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.journeytype }}</td>
                <td>{{ entity.starttime }}</td>
                <td>{{ entity.startloc }}</td>
                <td>{{ entity.pickuptime }}</td>
                <td>{{ entity.pickuploc }}</td>
                <td>{{ entity.vehicletype }}</td>
                <td>{{ entity.purpose }}</td>
                <td>{{ entity.accompaniedBy }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('request_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('request_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('request_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
