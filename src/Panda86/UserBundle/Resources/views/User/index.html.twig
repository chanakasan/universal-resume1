{% extends 'Panda86AppBundle::list-view.html.twig' %}

{% block title %}
    {{ parent() }} - List of Users
{% endblock %}
{% set heading = 'List of users' %}
{% set newBtn_url = path('user_new') %}

{% block javascripts %}
    {{ parent() }}
    <script src="/app/js/user/list.js"></script>
{% endblock %}
{% block table %}
<div class="span6">
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.getfirstname }} {{ entity.getlastname }}</td>
                <td>{{ entity.getusername }}</td>
                <td>{{ entity.getemail }}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': entity.id }) }}">Profile</a> |
                    <a href="#">Edit / Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
    <div class="pull-right" id="loadmoreajaxloader" style="display:none;"><img src="/app/img/ajax-loader.gif"/></div>
    <br/>
    {{ parent() }}
</div>

{% endblock %}