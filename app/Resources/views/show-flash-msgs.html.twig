{% set modes = ['success', 'error', 'warning', 'info'] %}
{% for mode in modes %}
    {% for flashMessage in app.session.flashbag.get(mode) %}
        <div class="alert alert-{{ mode }}">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ flashMessage }}
        </div>
    {% endfor %}
{% endfor %}