<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Vehicle Requests - ICTA</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        <!-- Le styles -->
        {% block stylesheets %}
            <link href="/bootstrap/css/bootstrap.css" rel="stylesheet">
            <link rel="stylesheet" type="text/css" href="/DataTables/bootstrap.css">
            <style type="text/css">
                body {
                    padding-top: 60px;
                    padding-bottom: 40px;
                }
            </style>
            <link href="/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">

            <!-- DataTables stylesheet-->
            <link rel="stylesheet" type="text/css" href="/DataTables/DT_bootstrap.css">
        {% endblock %}

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="/bootstrap/js/html5shiv.js"></script>
        <![endif]-->

        <!-- JavaScript files -->
        <link rel="shortcut icon" type="image/ico" href="http://www.datatables.net/favicon.ico">
        <script type="text/javascript" language="javascript" src="/DataTables/jquery.js"></script>
        <script type="text/javascript" language="javascript" src="/DataTables/jquery_002.js"></script>
        <script type="text/javascript" language="javascript" src="/DataTables/DT_bootstrap.js"></script>
    </head>
    <body>
    {% block navbar %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="{{ path('app_root') }}">Admin Section</a>

                <div class="nav-collapse collapse">
                    <div class="navbar-text pull-right">
                        {% block admin_login %}{% endblock %}
                    </div>
                    <ul class="nav">
                        <li class="active"><a href="#">#</a></li>
                        <li class="dropdown">
                            <a href="{{ path('request') }}" class="dropdown-toggle" data-toggle="dropdown">Requests<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('request') }}">View All</a></li>
                                <li><a href="{{ path('request_new') }}">Create New</a></li>
                                <li class="divider"></li>
                                <li class="nav-header">Filter List:</li>
                                <li><a href="#">View Granted</a></li>
                                <li><a href="#">View Cancelled</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="{{ path('vehicle') }}" class="dropdown-toggle" data-toggle="dropdown">Vehicles <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('vehicle') }}">Show All</a></li>
                                <li><a href="{{ path('vehicle_new') }}">Add New</a></li>
                                <li class="divider"></li>
                                <li class="nav-header">Categories:</li>
                                <li><a href="#">Show Categories</a></li>
                                <li><a href="#">Add Category</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="{{ path('driver') }}" class="dropdown-toggle" data-toggle="dropdown">Drivers <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('driver') }}">Show drivers</a></li>
                                <li><a href="{{ path('driver_new') }}">Add driver</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div><!--/.nav-bar-->
    {% endblock %}
    <div class="container" style="margin-top: 10px">
        <!-- if javascript is turned off -->
        <noscript>
            <p>Javascript is disabled in your browser.</p>

            <p>Please, turn on Javascript or use a different browser to use this app.</p>
            <a href="#">Click here to continue</a>
        </noscript>

        <!-- Example row of columns -->
        <div class="row">
            <div class="span12">
                {% block body %}{% endblock %}
            </div>
        </div>

        <hr>

        <footer>
            <p>&copy; ICTA {{ '' | date('Y') }}</p>
        </footer>

    </div>
    <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    {% block javascripts %}
        <script src="/public/js/jquery-1.9.1.min.js"></script>
        <script src="/bootstrap/js/bootstrap.min.js"></script>
        <script src="/public/js/jquery.dataTables.js"></script>
        <script src="/public/js/DS_bootstrap.js"></script>
    {% endblock %}

</body>
</html>